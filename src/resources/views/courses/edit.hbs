<h3 class="mt-4">Cập nhật khóa học</h3>

<form method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group mt-4'>
        <label for='name'>Tên khóa học</label>
        <input type='text' name='name' value="{{course.name}}" id='name' class='form-control'/>
    </div>
    <div class='form-group mt-4'>
        <label for='descripttion'>Mô tả</label>
        <input type='text' name='descripttion' value="{{course.descripttion}}" id='descripttion' class='form-control'/>
    </div>
    <div class='form-group mt-4'>
        <label for='image'>Hình ảnh</label>
        <input type='text' name='image' value="{{course.image}}" id='image' class='form-control'/>
    </div>

    <button type='submit' class='btn btn-primary'>Lưu lại</button>
</form>
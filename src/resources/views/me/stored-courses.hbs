<h3 class="mt-4 mb-4">Khóa học của tôi</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên khóa học</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col"></th>
        </tr>
    </thead>
  <tbody>
      {{#each courses}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.image}}</td>
            <td>
                <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course-modal">Xóa</a>
            </td>
        </tr>
    {{/each}}
  </tbody>
</table>

{{!-- Confirm Delete Course --}}
<div class="modal" id="delete-course-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Thông báo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn xóa hay không ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-course" class="btn btn-danger">Xóa</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-course-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        let getIdCourse;
        let deleteForm = document.forms['delete-course-form']
        const btnDeleteCourse = document.querySelector('#btn-delete-course')

        $('#delete-course-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        getIdCourse = button.data('id')
    })

    btnDeleteCourse.onclick = function(){
        deleteForm.action = '/courses/' + getIdCourse + '?_method=DELETE'
        deleteForm.submit()
    }

})
</script>